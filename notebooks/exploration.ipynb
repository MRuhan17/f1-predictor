# Basic setup
import pandas as pd
import numpy as np
import matplotlib.pyplot as plt
import seaborn as sns
from pathlib import Path
import joblib

# Use your utilities
from src.utils import load_csv, preview, check_data_pipeline

# Set style
sns.set(style="whitegrid", context="talk")
DATA_DIR = Path("../data")

check_data_pipeline()

# Load raw results and engineered features
results = load_csv("race_results_2024.csv")
features = load_csv("features_2024.csv")

print(f"Race results shape: {results.shape}")
print(f"Features shape: {features.shape}")

preview(features, 8)


# Which drivers scored the most points?
top_drivers = (
    results.groupby("driver")["points"]
    .sum()
    .sort_values(ascending=False)
    .head(10)
    .reset_index()
)

plt.figure(figsize=(10,5))
sns.barplot(data=top_drivers, x="points", y="driver", palette="coolwarm")
plt.title("Top 10 Drivers by Total Points (2024 Season)")
plt.xlabel("Points")
plt.ylabel("")
plt.show()

# Correlations between engineered features
corr = features.corr(numeric_only=True)
plt.figure(figsize=(8,6))
sns.heatmap(corr, annot=True, cmap="RdBu_r", fmt=".2f")
plt.title("Feature Correlation Matrix")
plt.show()

# Load trained model
model_path = DATA_DIR / "xgb_model.joblib"
model = joblib.load(model_path)

# Feature importance
feature_cols = ["avg_grid", "races", "total_points", "finish_diff", "form_score"]
importances = pd.DataFrame({
    "Feature": feature_cols,
    "Importance": model.feature_importances_
}).sort_values("Importance", ascending=False)

plt.figure(figsize=(8,5))
sns.barplot(data=importances, x="Importance", y="Feature", palette="crest")
plt.title("Feature Importance ‚Äì XGBoost Model")
plt.show()

importances

# Load simulated standings
standings = load_csv("simulated_standings_2025.csv")

plt.figure(figsize=(10,5))
sns.barplot(
    data=standings.head(10),
    x="avg_points",
    y="driver",
    palette="rocket"
)
plt.title("Predicted Top 10 Drivers (Simulated 2025 Season)")
plt.xlabel("Average Points (across simulations)")
plt.ylabel("")
plt.show()

# Compare model's avg_finish prediction to actual
features["predicted_avg_finish"] = model.predict(features[feature_cols])

plt.figure(figsize=(7,7))
sns.scatterplot(
    x=features["avg_finish"],
    y=features["predicted_avg_finish"],
    s=100, color="teal"
)
plt.plot([0, 20], [0, 20], "r--")
plt.title("Actual vs Predicted Average Finishing Position")
plt.xlabel("Actual Avg Finish")
plt.ylabel("Predicted Avg Finish")
plt.show()


# Save summary stats
summary_path = DATA_DIR / "summary_report.csv"
summary_df = features[["driver", "constructor", "avg_finish", "predicted_avg_finish", "form_score"]]
summary_df.to_csv(summary_path, index=False)
print(f"‚úÖ Summary report saved to {summary_path}")
summary_df.head(10)


